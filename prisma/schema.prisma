generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum CanMixAnswer {
  yes
  no
  depends
}

model Mix {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  canMix      CanMixAnswer
  description String
  products    Product[]
  sources     Source[]
  slug        String       @unique
}

type Source {
  title String
  link  String
}

type Product {
  name String
  type String
}
